<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
   
   <!-- Basic layout -->
   <definition name="featureLayout" extends="mainLayout">
      <put-attribute name="sidebar" value="/WEB-INF/jsp/common/sidebarFeature.jsp" cascade="true" />
   </definition>
   
   <definition name="features.*" extends="featureLayout">
      <put-attribute name="tabFeatures" value="active" />
      <put-attribute name="title" value="Features - DataTables4j" />
      <put-attribute name="content" value="/WEB-INF/jsp/features/{1}.jsp" />
   </definition>

</tiles-definitions>